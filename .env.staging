# Staging Environment
NODE_ENV=staging
PORT=3001

# Message broker configuration
MESSAGE_BROKER=rabbitmq
#MESSAGE_BROKER=kafka

# RabbitMQ Configuration (Staging)
RABBITMQ_URL=amqp://staging_user:staging_password@staging-rabbitmq:5672
RABBITMQ_USER=staging_user
RABBITMQ_HOST=staging-rabbitmq
RABBITMQ_PASSWORD=staging_password
RABBITMQ_PORT=15672
RABBITMQ_VHOST=/staging

# =================
# Kafka Broker Configuration
# =================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=microservice-template

# =================
# Consumer Configuration
# =================
KAFKA_GROUP_ID=microservice-template-group
KAFKA_SESSION_TIMEOUT=30000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_MAX_BYTES_PER_PARTITION=1048576
KAFKA_MIN_BYTES=1
KAFKA_MAX_WAIT_TIME=5000

# =================
# Producer Configuration
# =================
KAFKA_MAX_IN_FLIGHT_REQUESTS=5
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_RETRY_DELAYMS=300
KAFKA_RETRY_RETRIES=5

# =================
# Security Configuration (SSL)
# =================
KAFKA_SSL_ENABLED=false
# KAFKA_SSL_CA_PATH=/path/to/ca-cert
# KAFKA_SSL_CERT_PATH=/path/to/client-cert
# KAFKA_SSL_KEY_PATH=/path/to/client-key

# =================
# Security Configuration (SASL)
# =================
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=username
KAFKA_SASL_PASSWORD=password

# PostgreSQL (Staging)
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/db_staging

# JWT Configuration (Staging)
JWT_SECRET=StagingSecretKey2025_ChangeInProduction
JWT_ACCESS_EXPIRATION=1800        # 30 minutes
JWT_REFRESH_EXPIRATION=604800     # 7 days
JWT_ISSUER=microservice-template-staging
JWT_AUDIENCE=microservice-users-staging

# Logging Configuration (Staging - can be Linux/Windows)
LOG_LEVEL=debug
LOG_STRATEGY=ELASTICSEARCH  # Options: CONSOLE, FILE, ELASTICSEARCH, SYSLOG, ALL
ELASTICSEARCH_NODE=http://staging-elasticsearch:9200