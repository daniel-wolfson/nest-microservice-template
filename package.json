{
    "name": "template",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "bin": {
        "crun": "dist/main"
    },
    "scripts": {
        "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('child_process').execSync('husky', {stdio: 'inherit'}) }\"",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "compile:seeAllErrors": "npx tsc --noEmit",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:dev:live": "concurrently \"npm run start:dev\" \"npx browser-sync start --proxy localhost:3000 --files 'src/**/*' --port 4000 --no-open\"",
        "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
        "start:staging": "cross-env NODE_ENV=staging node dist/main",
        "start:prod": "yarn build && cross-env NODE_ENV=production node dist/main",
        "start:nodemon:live": "concurrently \"nodemon\" \"browser-sync start --proxy localhost:3000 --files 'src/**/*' --port 4000\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "npx typeorm-ts-node-commonjs -d libs/providers/src/typeorm/typeorm-migration.config.ts",
        "migration:generate": "rimraf dist/libs && tsc -p ./libs/entities/tsconfig.lib.json && yarn typeorm migration:generate migrations/migration",
        "migration:create": "yarn typeorm migration:create",
        "migration:run": "rimraf dist/migrations && tsc -p ./migrations/tsconfig.migration.json && yarn typeorm migration:run",
        "migration:revert": "yarn typeorm migration:revert"
    },
    "dependencies": {
        "@apollo/server": "^5.4.0",
        "@as-integrations/express5": "^1.1.2",
        "@elastic/elasticsearch": "^9.1.1",
        "@golevelup/nestjs-rabbitmq": "^6.0.2",
        "@google-analytics/data": "^5.2.1",
        "@nestjs/apollo": "^13.2.3",
        "@nestjs/axios": "^4.0.1",
        "@nestjs/common": "^11.1.5",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.5",
        "@nestjs/cqrs": "^11.0.3",
        "@nestjs/graphql": "^13.2.3",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/microservices": "^11.1.13",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.5",
        "@nestjs/swagger": "^11.2.5",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/typeorm": "^11.0.0",
        "@prisma/adapter-pg": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "apollo-server-express": "^3.13.0",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "graphql": "^16.11.0",
        "joi": "^18.0.2",
        "kafkajs": "^2.2.4",
        "nest-winston": "^1.10.2",
        "nestjs-prisma": "^0.27.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.17.2",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "stripe": "^20.3.1",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.25",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "winston-elasticsearch": "^0.11.0",
        "winston-syslog": "^2.7.1",
        "yargs": "^17.7.1"
    },
    "overrides": {
        "lodash": "^4.17.21",
        "cross-spawn": "^7.0.5",
        "tmp": "^0.2.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.16",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.5",
        "@types/bcrypt": "^6.0.0",
        "@types/elasticsearch": "^5.0.43",
        "@types/express": "^5.0.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.19.30",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/stripe": "^8.0.416",
        "@types/supertest": "^2.0.11",
        "@types/winston": "^2.4.4",
        "@types/yargs": "^17.0.24",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "browser-sync": "^3.0.4",
        "concurrently": "^9.2.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "nodemon": "^3.1.10",
        "prettier": "^2.3.2",
        "prisma": "^7.3.0",
        "prisma-dbml-generator": "^0.12.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.0",
        "typescript": "^5.9.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.(spec|test)\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s",
            "!**/*.spec.ts",
            "!**/*.test.ts",
            "!**/node_modules/**",
            "!**/dist/**",
            "!**/coverage/**"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src/",
            "<rootDir>/libs/",
            "<rootDir>/tests/"
        ],
        "moduleNameMapper": {
            "#main-entry-point": "<rootDir>/node_modules/.prisma/client/index.js",
            "^@lib/errors(|/.*)$": "<rootDir>/libs/errors/src/$1",
            "^@lib/providers(|/.*)$": "<rootDir>/libs/providers/src/$1",
            "^@lib/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
            "^@lib/entities(|/.*)$": "<rootDir>/libs/entities/src/$1",
            "^@lib/domains(|/.*)$": "<rootDir>/libs/domains/src/$1",
            "^@generator/generator(|/.*)$": "<rootDir>/libs/generator/src/$1",
            "^@core/(.*)$": "<rootDir>/src/core/$1",
            "^@src/(.*)$": "<rootDir>/src/$1",
            "^src/(.*)$": "<rootDir>/src/$1"
        }
    },
    "prisma": {
        "seed": "ts-node libs/providers/src/prisma/seed.ts"
    }
}
