# Common
PORT=3000

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:123456@localhost:5672
RABBITMQ_USER=admin
RABBITMQ_HOST=localhost
RABBITMQ_PASSWORD=123456
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_VHOST=/

# PostgreSQL
DATABASE_URL=postgresql://postgres:123456@localhost:5432/postgres

# MongoDB Configuration (for Saga state persistence)
MONGODB_URI=mongodb://admin:123456@localhost:27017/microservice-template-billing?authSource=admin

# Redis Configuration (for Saga coordination)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET='SecretKey2025'
JWT_ACCESS_EXPIRATION=3600      # 1 hour
JWT_REFRESH_EXPIRATION=604800   # 7 days
JWT_ISSUER=microservice-template
JWT_AUDIENCE=microservice-users

# Logging Configuration
LOG_LEVEL=debug
LOG_STRATEGY=ALL  # Options: CONSOLE, FILE, ELASTICSEARCH, SYSLOG, ALL
ELASTICSEARCH_NODE=http://localhost:9200 

# Message broker configuration
MESSAGE_BROKER=rabbitmq
#MESSAGE_BROKER=kafka

# =================
# Kafka Broker Configuration
# =================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=microservice-template

# =================
# Consumer Configuration
# =================
KAFKA_GROUP_ID=microservice-template-group
KAFKA_SESSION_TIMEOUT=30000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_MAX_BYTES_PER_PARTITION=1048576
KAFKA_MIN_BYTES=1
KAFKA_MAX_WAIT_TIME=5000

# =================
# Producer Configuration
# =================
KAFKA_MAX_IN_FLIGHT_REQUESTS=5
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_RETRY_DELAYMS=300
KAFKA_RETRY_RETRIES=5

# =================
# Security Configuration (SSL)
# =================
KAFKA_SSL_ENABLED=false
# KAFKA_SSL_CA_PATH=/path/to/ca-cert
# KAFKA_SSL_CERT_PATH=/path/to/client-cert
# KAFKA_SSL_KEY_PATH=/path/to/client-key

# =================
# Security Configuration (SASL)
# =================
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=admin
KAFKA_SASL_PASSWORD=123456