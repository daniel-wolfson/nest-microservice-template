# Billing Module Environment Variables

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# YooKassa Configuration (optional)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=123456

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Billing Configuration
BILLING_CURRENCY=USD
BILLING_LOW_BALANCE_THRESHOLD=10
BILLING_INVOICE_DUE_DAYS=7

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/billing_db?schema=public"
