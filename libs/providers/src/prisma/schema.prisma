// Database configuration
datasource db {
  provider = "postgresql"
}

// Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// Optional: DBML generator for visual diagrams
generator dbml {
  provider = "prisma-dbml-generator"
}

// Enum example
enum Language {
  ES_ES
  EN_US
}
