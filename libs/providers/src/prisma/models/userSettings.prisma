// User settings model
model UserSettings {
  userId               String   @id @map("userId")
  receiveNotifications Boolean  @default(false)
  receiveEmails        Boolean  @default(false)
  terms                Boolean  @default(false)
  language             Language
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}
